<div class="container mt-5 mb-5">
  <h2>Welcome to Pizza Shop</h2>
</div>

<div class="row">
  <% @products.each do |product| %>
    <div class="col-md-4">

      <div class="mt-2 mb-2">
        <%= product.title %>
      </div>
      <div class="">
        <img class="rounded" src="<%= product.path_to_image %>" alt="pizza <%= product.title %>">
      </div>
      <div class="text-muted">
        <%= product.description %>
      </div>
      <div class="">
        <%= product.title %>
      </div>

    </div>
  <% end %>
</div>

<div class="container mt-5">
  <button class="btn btn-primary btn-lg" type="button" name="button" onclick="test()">Click me</button>
</div>
